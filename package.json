{
  "name": "care-hono-server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm tsx watch src/index.tsx",
    "start": "node dist/index.js",
    "build": "tsup index.tsx --format esm --dts --out-dir dist",
    "app-build": "cd zendesk-app && zcli apps:package",
    "db:pull": "drizzle-kit pull --config ./drizzle.config.ts && shx mkdir -p ./src/db && shx mv ./drizzle/schema.ts ./src/db/schema.ts && shx rm -rf ./drizzle"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.0.0",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/pg": "^8.6.0",
    "drizzle-kit": "^0.31.8",
    "shx": "^0.3.4",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
